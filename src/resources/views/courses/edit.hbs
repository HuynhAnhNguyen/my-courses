<div class="mt-4">
  <h3>Cập nhật khóa học</h3>

  <form class="mt-4" method="POST" action="/courses/{{course._id}}?_method=PUT">
    <div class="form-group">
      <label for="name">Tên khóa học</label>
      <input type="text" class="form-control" value={{course.name}} name="name" id="name" />
    </div>

    <div class="form-group">
      <label for="description">Mô tả</label>
      <textarea
        class="form-control"
        name="description"
        id="description">
        {{course.description}}
      </textarea>
    </div>

    <div class="form-group">
      <label for="videoId">Video ID</label>
      <input type="text" class="form-control" name="videoId" id="videoId" value={{course.videoId}} />
    </div>
    <div class="form-group">
      <label for="level">Trình độ</label>
      <input type="text" class="form-control" name="level" id="level" value={{course.level}} />
    </div>
    <br />
    <button type="submit" class="btn btn-primary">Lưu</button>

  </form>
</div>